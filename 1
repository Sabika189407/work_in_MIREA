#include <stdio.h>

int temperature()
{
	float temp_c = 0.0;
	scanf("%f", &temp_c);
	float temp_f = 1.8*temp_c + 32;
	return temp_f;
}

int vel()
{
	int vel_km = 0;
	scanf("%d", &vel_km);
	float vel_m = vel_km / 3.6;
	return vel_m;
}
int time_moments()
{
	int hour1 = 0;
	int min1 = 0;
	int sec1 = 0;
	int hour2 = 0;
	int min2 = 0;
	int sec2 = 0;
	scanf("%d %d %d %d %d %d", &hour1, &min1, &sec1, &hour2, &min2, &sec2);
	return (360*hour2+60*min2+sec2 - 360*hour1+60*min1+sec1);
}

